     <div class="container" ng-controller="NewVideoController">

      <form name="newVideo" class="form-horizontal col-lg-6" action="/video/create" method="post" enctype="multipart/form-data" role="form">
  <div class="form-group"  style="margin-top:90px;">
    <legend>Ajouter une vidéo</legend>
  </div>

 <div class="row">
    <div class="form-group">
    <label for="select" class="col-lg-2 control-label">Type de vidéo: </label>
      <div class="col-lg-10">
        <select ng-init="Type = 1" id="select" class="form-control" name="Type" ng-model="Type">
          <% _.each(types, function(type) { %>
          <option value="<%= type.Id %>"   ><%= type.Wording %></option>
          <% }) %>
        </select>
      </div>
    </div>
  </div>

  <div class="control-group form-group col-md-12">
    <label for="select" class="col-lg-2 control-label">Acteurs:</label> <div class="col-md-5"><input type="button" ng-click="actors = actors+1" id="actors" class="form-control" value="Ajouter un Acteur"/></div> <div class="col-md-5">
      <input type="button" ng-click="actors = actors-1" id="actors" class="form-control" value="Supprimer un Acteur" ng-show="actors > 0"/></div>
        <br /><br />
        <div ng-repeat="i in getActorsNumber(actors) track by $index">
          <div class="col-md-2"></div><div class="col-md-5">
          <input name="ActorsName" type="text" placeholder="Prénom" class="form-control" /></div> <div class="col-md-5"><input name="ActorsLastName" type="text" placeholder="Nom" class="form-control"></div>
          <br />
          <br />

        </div>
        </div>

<div class="control-group form-group col-md-12">
    <label for="select" class="col-lg-2 control-label">Genres:</label>   <div class="col-md-5"><input type="button" ng-click="genres = genres+1" id="genre" class="form-control" value="Ajouter un Genre"/></div> <div class="col-md-5">
      <input type="button" ng-click="genres = genres-1" id="actors" class="form-control" value="Supprimer un Genre" ng-show="genres > 0"/></div>
        <br /><br />
        <div ng-repeat="i in getGenresNumber(genres) track by $index">
          <div class="col-md-2"></div> <div class="col-md-10"><select ng-init="Genres = 1" id="select" class="form-control" name="Genres" ng-model="Genres">
          <% _.each(genres, function(genre) { %>
          <option value="<%= genre.Id %>"   ><%= genre.Wording %></option>
          <% }) %>
        </select>
      </div>
          <br />
          <br />
 </div>
        </div>

  <div class="row">
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Prenom du Producteur :</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="DirectorName" name="DirectorName" value="<%= video.video[0].DirectorName %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Nom du Producteur:</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="DirectorLastName" name="DirectorLastName" value="<%= video.video[0].DirectorLastName %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Titre :</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="Title" name="Title" value="<%= video.video[0].Title %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <label for="textarea" class="col-lg-2 control-label">Descriptions:</label>
      <div class="col-lg-10">
        <input type="textarea" class="form-control" id="Description" name="Description" value="<%= video.video[0].Description %>">
      </div>
    </div>
  </div>

<div ng-show="Type == 1">

   <div class="row">
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Titre de la serie:</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="SeriesTitle" name="SeriesTitle" value="<%= video.video[0].SeriesTitle %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Saison :</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="Season" name="Season" value="<%= video.video[0].Season %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Episode :</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="Episode" name="Episode" value="<%= video.video[0].Episode %>">
      </div>
    </div>
  </div>

</div>

 <div class="row">
  <div class="form-group" ng-class="{'has-error': newVideo.ReleaseDate.$invalid}">
      <label for="text" class="col-lg-2 control-label">Date: </label>
      <div class="col-lg-10">
    <input type="text" class="form-control" ng-init="selectedDate = <%= video.video[0].ReleaseDate %>" ng-model="selectedDate" name="ReleaseDate" data-date-format="yyyy/MM/dd" bs-datepicker >
  </div>
  </div>
  </div>

     <div class="row">
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Image:</label>
      <div class="col-lg-10">
<input type="file" name="Pictures" class="filestyle" data-buttonText="Trouver l'image">

      </div>
    </div>
  </div>

  <div class="form-group col-lg-12">
    <div class="col-md-4"></div><div class="col-md-4"><button class="pull-right btn btn-default" id="ajouter">Ajouter</button></div>
  </div>


</form>
</div>
